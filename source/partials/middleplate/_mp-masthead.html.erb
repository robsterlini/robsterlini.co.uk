<header class="mp-masthead">
  <nav class="mp-nav group">
    <div class="mp-nav--left"><!--
      <% data.middleplate.pages.each_with_index do |nav, index| %>
        --><li class="mp-nav__item">
        <%
          if nav.short
            replacements = [
              ["{{", "<span class='mp-hide__tiny'>"],
              ["}}", "</span>"]
            ]
            replacements.each {|replacement| nav.short.gsub!(replacement[0], replacement[1])}
          end
        %>
          <%= link_to "#{nav.short || nav.title}", "/middleplate/#{nav.slug}", :title => "#{nav.alt}", :class => "mp-nav__link" %>
        </li><!--
      <% end %>
    --></div>
    <div class="mp-nav--right">
      <%= link_to "#{partial("partials/svg/github-reversed")}<span class='btn__subtitle'>Fork me on </span>GitHub", mp_github, :title => "See the Middleplate repo on GitHub", :class => "btn" %>
    </div>
  </nav>
</header>
<main id="content" class="wrapper" data-page="home">

    <%# HERO %>
    <% hero = data.home.sections.hero %>
    <%= partial "partials/ui/heading", locals: {
      title: hero.title,
      pre: hero.pre,
      text: hero.text,
      images: hero.images
    } %>

    <%# MY WORK %>
    <% work = data.home.sections.work %>
    <%= partial "partials/ui/heading", locals: {
      title: work.title,
      pre: work.pre,
      text: work.text,
      extras: {
        end: partial("partials/home/logos")
      }
    } %>

    <%# TESTIMONIAL %>
    <% testimonial = data.home.sections.testimonial %>
    <%= partial "partials/ui/heading", locals: {
      title: testimonial.title,
      pre: testimonial.pre,
      text: testimonial.text,
      images: testimonial.images
    } %>

    <%# JOURNAL %>

    <% blog.articles.take(1).each_with_index do |article, i| %>
      <%#= partial "partials/ui/heading", locals: {
        title: {
          indent: 1,
          width: 5,
          copy: article.title
        },
        pre: {
          width: 7,
          copy: "Recently I wrote about #{ partial("partials/journal/category", :locals => { :a => article })}"
        },
        text: {
          indent: 1,
          width: 5,
          copy: [
            article.data.description
          ],
          cta: [
            {
              link: article,
              text: 'Read it in full'
            }
          ]
        },
        images: {
          absolute: [
            {
              src: "/assets/images/hero/blog/#{article.slug}_full.jpg",
              width: 6,
              indent: 6,
              kite: true
            }
          ]
        }
      } %>
    <% end %>
</main>
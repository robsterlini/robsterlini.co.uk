<% content_for(:title, "#{tagname}") %>
<main id="content" class="wrapper">
  <%= partial "partials/hero", locals: {
    title: tagname
  } %>
  <article class="typeset group">

    <h2 class="heading--gutter">Posts</h2>
    
    <% page_articles.each_with_index do |article, i| %>
      <% localised_date = "<time>#{article.date.strftime("%a %e %b")}</time>" %>
      <h3><%= link_to article.title, article %></h3>
      <p><%= article.data.description %></p>
       <p class="small-caps"><%= partial "partials/journal/posted", :locals => { :a => article } %></p>
    <% end %>

    <%= partial "partials/journal/categories" %>
  </article>
</main>